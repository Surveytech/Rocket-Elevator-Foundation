
<%= form_with(model: intervention, local: true) do |form| %>
    <% if intervention.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(intervention.errors.count, "error") %> prohibited this intervention from being saved:</h2>

            <ul>
            <% intervention.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
    <div class="row no-gutters wow slideInUp" data-wow-duration="1s">
      <div class="col-md-4 home-form">
        <%= form_tag(intervention, method: "post", class: "form-inline", remote: true) do %>
        <%= select_tag "Customer", options_from_collection_for_select(Customer.all, "id", "company_name"), prompt: "Customer", class: "custom-select mb-0 mr-sm-0 mb-sm-0" %>
        <%= select_tag "Building", options_from_collection_for_select(Building.all, "id", "id"), prompt: "Building", class: "custom-select mb-0 mr-sm-0 mb-sm-0" %>
        <%= select_tag "Battery", options_from_collection_for_select(Battery.all, "id", "id"), prompt: "Battery", class: "custom-select mb-0 mr-sm-0 mb-sm-0" %>
        <%= select_tag "Column", options_from_collection_for_select(Column.all, "id", "id"), prompt: "Column", class: "custom-select mb-0 mr-sm-0 mb-sm-0" %>
        <%= select_tag "Elevator", options_from_collection_for_select(Elevator.all, "id", "id"), prompt: "Elevator", class: "custom-select mb-0 mr-sm-0 mb-sm-0" %>
        <%= select_tag "Employee", options_from_collection_for_select(Employee.all, "id", "id"), prompt: "Employee", class: "custom-select mb-0 mr-sm-0 mb-sm-0" %>
        <%= submit_tag("Create Intervention", class: "btn btn-primary") %>
    <% end %>
      </div>
    </div>

