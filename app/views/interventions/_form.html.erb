
<%= form_with(model: intervention, local: true) do |form| %>
    <% if intervention.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(intervention.errors.count, "error") %> prohibited this intervention from being saved:</h2>

            <ul>
            <% intervention.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row pt-20">
      <div class="col-md-4">
        <div class="field">
          <%= form.label :author_id %>
          <%= form.number_field :author_id, value:current_user.id %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="field">
          <%= form.label :customer_id %>
          <%= form.number_field :customer_id %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="field">
          <%= form.label :building_id %>
          <%= form.number_field :building_id %>
        </div>
      </div>
    </div>
    <div class="row pt-20">
      <div class="col-md-4">
        <div class="field">
          <%= form.label :battery_id %>
          <%= form.number_field :battery_id %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="field">
          <%= form.label :column_id %>
          <%= form.number_field :column_id %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="field">
          <%= form.label :elevator_id %>
          <%= form.number_field :elevator_id %>
        </div>
      </div>
    </div>
    <div class="row pt-20">
      <div class="col">
        <div class="field">
          <%= form.label :employee_id %>
          <%= form.number_field :employee_id %>
        </div>
      </div>
    </div>
    <div class="row pt-20">
        <div class="col-md-6">
          <div class="field">
            <%= form.label :intervention_start %>
            <%= form.datetime_select :intervention_start %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="field">
            <%= form.label :intervention_end %>
            <%= form.datetime_select :intervention_end %>
          </div>
        </div>
    </div>
    <div class="row pt-20">
      <div class="col-md-4">
        <div class="field">
          <%= form.label :result %>
          <%= form.text_field :result %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="field">
          <%= form.label :report %>
          <%= form.text_field :report %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="field">
          <%= form.label :status %>
          <%= form.text_field :status %>
        </div>
      </div>
    </div>
    <div class="row text-center">
      <div class="col pt-30">
        <div class="actions">
          <%= form.submit %>
        </div>
      </div>
    </div>

<% end %>

